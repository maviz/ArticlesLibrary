<table class="table table-hover" id="cat_table">
<thead>
  <th>Category Name</th>
</thead>
  <tbody>
  <% @categories.each do |cat| %>
  <tr>
    <td>
     <%= link_to "#{cat.name} (#{cat.articles.count})", category_path(cat) %>
    </td>
  </tr>
      <% end %>
  <tr>
    <td>
      <%= link_to "Un-Categorized  (#{ Article.uncategorized.count }) " , articles_path(uncat: true) , remote: true %>
    </td>
  </tr>
  </tbody>
</table>


    <table class="table table-hover" id="user_table">
      <thead>
      <th>User Name</th>
      <th>User Email</th>
      </thead>
      <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to "All Artilces by #{(user.name.blank? ? 'Anonymous': user.name)}", articles_path, remote: true   %>
        </td>
        <td>
          <%= link_to "Highly liked article by #{(user.name.blank? ? 'Anonymous': user.name)}", article_path(user.highly_liked_article), remote: true  %>
        </td>
        <td>
          <%= user.email %>
        </td>
      </tr>
          <% end %>
      </tbody>
    </table>

